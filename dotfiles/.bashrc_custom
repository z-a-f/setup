# mans() { man $1 | grep -iC2 --color=always $2 | less }		# Search in MANPAGE
mcd() { mkdir -pv "$1" && cd "$1"; }		# Make directory and cd there
ql () { qlmanage -p "$*" >& /dev/null; }		# Quick look
rmtild () { find . -name "*.*~" | xargs rm -vf; }		# Remove temporary files

