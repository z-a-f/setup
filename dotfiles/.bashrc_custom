
# Change the prompt:
export PS1="\[${Color_Off}${BICyan}\u${White}@${Purple}\h${White}:${BIYellow}\W${Color_Off}\] \$ "

# Setup better colors:
export CLICOLOR=1
export LSCOLORS=ExFxBxDxCxegedabagacad

# Change the aliases:
alias cp='cp -rv'
alias ls='ls -GFh'
alias ll='ls -GFhal'
alias rm='rm -vi'
alias mkdir='mkdir -pv'

